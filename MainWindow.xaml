<Window x:Class="RegisterHotkeyWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegisterHotkeyWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing" MouseMove="Window_MouseMove">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical">
            <Label Content="LOG" />
            <TextBox x:Name="txtLog" AcceptsReturn="True" />
            <Label x:Name="lblMouse" Content="X: 0 - Y: 0" />
        </StackPanel>
        
    </Grid>
</Window>
